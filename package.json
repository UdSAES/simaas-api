{
  "name": "simaas_api",
  "version": "0.2.0",
  "description": "Tiny micro service which implements the public API of the Simulation as a Service instance",
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "lint-fix": "standard --fix",
    "preapi-serve": "npm run api-resolve",
    "api-serve": "speccy serve ./oas/simaas_oas2_flat.json",
    "api-resolve": "node ./scripts/api-resolve.js",
    "preapi-2oas3": "npm run api-resolve",
    "api-2oas3": "swagger2openapi -o ./oas/simaas_oas3_flat.json ./oas/simaas_oas2_flat.json",
    "preapi-lint": "npm run api-2oas3",
    "api-lint": "speccy lint --rules ./test/speccy_rules.json ./oas/simaas_oas3_flat.json",
    "predredd": "npm run api-resolve",
    "dredd": "node ./test/dredd.js",
    "test-all": "npm run lint && npm run api-lint && npm run dredd"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UdSAES/simaas_api.git"
  },
  "author": "Moritz St√ºber <moritz.stueber@aut.uni-saarland.de>",
  "contributors": [
    "Florian Wagner <florian.wagner@aut.uni-saarland.de>"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/UdSAES/simaas_api/issues"
  },
  "homepage": "https://github.com/UdSAES/simaas_api#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "delay": "^4.1.0",
    "designetz_logger": "^1.0.2",
    "express": "^4.16.4",
    "express-async-errors": "^3.1.1",
    "fs-extra": "^7.0.1",
    "json-schema-ref-parser": "^6.0.2",
    "lodash": "^4.17.11",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "serialize-error": "^3.0.0",
    "swagger-tools": "^0.10.4"
  },
  "devDependencies": {
    "dredd": "^5.3.1",
    "speccy": "^0.8.5",
    "standard": "^12.0.1",
    "swagger2openapi": "^3.2.14"
  },
  "standard": {
    "ignore": [
      "/simaas_worker/",
      "/udsaes_async_queue/"
    ]
  }
}
