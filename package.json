{
  "name": "simaas_api",
  "version": "0.2.2",
  "description": "Tiny micro service which implements the public API of the Simulation as a Service instance",
  "main": "index.js",
  "config": {
    "oas3": "./oas/simaas_oas3.json",
    "oas3_flat": "./oas/simaas_oas3_flat.yaml"
  },
  "scripts": {
    "start": "npm run api-resolve --silent && startup.sh",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "format": "prettier-standard --lint '**/*.{js,json}'",
    "api-lint": "speccy lint --rules ./test/speccy_rules.json $npm_package_config_oas3",
    "api-serve": "speccy serve $npm_package_config_oas3",
    "api-resolve": "speccy resolve $npm_package_config_oas3 > $npm_package_config_oas3_flat",
    "predredd": "npm run api-resolve",
    "dredd": "node ./test/dredd.js",
    "test-all": "npm run lint && npm run api-lint && npm run dredd"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UdSAES/simaas_api.git"
  },
  "author": "Moritz St√ºber <moritz.stueber@aut.uni-saarland.de>",
  "contributors": [
    "Florian Wagner <florian.wagner@aut.uni-saarland.de>"
  ],
  "bugs": {
    "url": "https://github.com/UdSAES/simaas_api/issues"
  },
  "homepage": "https://github.com/UdSAES/simaas_api#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.15",
    "celery-ts": "^1.1.0",
    "cors": "^2.8.5",
    "delay": "^4.4.1",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-request-id": "^1.4.1",
    "fs-extra": "^8.1.0",
    "json-schema-ref-parser": "^6.1.0",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "promise-status-async": "^1.1.11",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.9",
    "serialize-error": "^4.1.0",
    "swagger-tools": "^0.10.4"
  },
  "devDependencies": {
    "dredd": "^9.0.5",
    "speccy": "^0.11.0",
    "standard": "^12.0.1",
    "swagger2openapi": "^5.4.0"
  },
  "standard": {
    "ignore": [
      "/simaas_worker/",
      "/udsaes_async_queue/"
    ]
  }
}
