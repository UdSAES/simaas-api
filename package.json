{
  "name": "simaas_api",
  "version": "0.4.0",
  "description": "Microservice which implements the public API of the Simulation as a Service instance",
  "main": "index.js",
  "config": {
    "oas3": "./templates/simaas_oas3.json",
    "oas3_flat": "./templates/simaas_oas3_flat.yaml"
  },
  "scripts": {
    "prestart": "npm run api-resolve",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "format": "prettier-standard --lint '**/*.{js,json}'",
    "api-lint": "spectral lint $npm_package_config_oas3",
    "api-serve": "speccy serve $npm_package_config_oas3",
    "api-resolve": "speccy resolve $npm_package_config_oas3 > $npm_package_config_oas3_flat",
    "predredd": "npm run api-resolve",
    "dredd": "node ./test/dredd.js",
    "test-all": "npm run lint && npm run api-lint && npm run dredd"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UdSAES/simaas_api.git"
  },
  "author": "Moritz St√ºber <moritz.stueber@aut.uni-saarland.de>",
  "contributors": [
    "Florian Wagner <florian.wagner@aut.uni-saarland.de>"
  ],
  "bugs": {
    "url": "https://github.com/UdSAES/simaas_api/issues"
  },
  "homepage": "https://github.com/UdSAES/simaas_api#readme",
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.7",
    "@rdfjs/namespace": "^1.1.0",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.15",
    "celery-ts": "^1.1.0",
    "cors": "^2.8.5",
    "delay": "^5.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-fileupload": "^1.2.1",
    "express-request-id": "^1.4.1",
    "extract-zip": "^2.0.1",
    "fs-extra": "^9.1.0",
    "jsonld-streaming-parser": "^2.4.0",
    "jsonld-streaming-serializer": "^1.3.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "n3": "^1.11.1",
    "node-cache": "^5.1.2",
    "openapi-backend": "^3.9.1",
    "promise-status-async": "^1.1.11",
    "rdf-store-stream": "^1.3.0",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.9",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@stoplight/spectral": "^5.9.0",
    "dredd": "^9.0.5",
    "prettier-standard": "^16.4.1",
    "speccy": "^0.11.0",
    "standard": "^16.0.3"
  },
  "standard": {
    "ignore": [
      "/simaas_worker/",
      "/udsaes_async_queue/"
    ]
  }
}
