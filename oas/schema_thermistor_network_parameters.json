{
  "unitOfParameter": {
    "type": "object",
    "required": ["unit"],
    "properties": {
      "unit": {
        "type": "string",
        "description": "Unit of the value, formatted as defined in the [Modelica Specification v3.4](https://www.modelica.org/documents/ModelicaSpec34.pdf), Chapter 19"
      }
    }
  },
  "ThermistorNetwork": {
    "type": "object",
    "description": "The parameters of the model instance representing a specific thermistor network",
    "required": ["R1", "R2", "R3", "R4", "TH1", "TH2", "B1", "B2"],
    "properties": {
      "R1": {
        "type": "object",
        "description": "Resistance value of R1",
        "allOf": [
          { "$ref": "#/unitOfParameter" },
          {
            "type": "object",
            "required": ["value"],
            "properties": {
              "unit": {
                "pattern": "^Ohm$"
              },
              "value": {
                "type": "integer",
                "format": "int32",
                "minimum": 0
              }
            }
          }
        ]
      },
      "R2": {
        "type": "object",
        "description": "Resistance value of R2",
        "allOf": [
          { "$ref": "#/unitOfParameter" },
          {
            "type": "object",
            "required": ["value"],
            "properties": {
              "unit": {
                "pattern": "^Ohm$"
              },
              "value": {
                "type": "integer",
                "format": "int32",
                "minimum": 0
              }
            }
          }
        ]
      },
      "R3": {
        "type": "object",
        "description": "Resistance value of R3",
        "allOf": [
          { "$ref": "#/unitOfParameter" },
          {
