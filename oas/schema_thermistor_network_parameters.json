        "allOf": [
          { "$ref": "#/unitOfParameter" },
          {
            "type": "object",
            "required": ["value"],
            "properties": {
              "unit": {
                "pattern": "^1/K$"
              },
              "value": {
                "type": "number",
                "format": "float"
              }
            }
          }
        ]
      },
      "B2": {
